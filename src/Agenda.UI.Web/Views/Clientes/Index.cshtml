@model IEnumerable<Agenda.Application.ViewModels.Cliente.ClienteViewModel>

@{
    Layout = "~/Views/Shared/_LayoutGridView.cshtml";
}

@section JsAdicional{
    @*@Scripts.Render("~/Views/Clientes/index.js")*@
}

@section GridView {
    <table class="table table-bordered table-condensed table-hover table-dataTable" width="100%">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Celular</th>
            <th>Email</th>
            <th>Data Nascimento</th>
            <th>Ativo</th>
            <th>Ações</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ClienteId)</td>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.CelularPrincipal)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                <td>@Html.DisplayFor(modelItem => item.Ativo)</td>
                <td>
                    <a href="@Url.Action("Editar", new { id = item.ClienteId })" title="Editar" class="btn btn-sm btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                    <a href="@Url.Action("Detalhes", new { id = item.ClienteId })" title="Detalhes" class="btn btn-sm btn-info"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <a href="@Url.Action("Excluir", new { id = item.ClienteId })" title="Excluir" class="btn btn-sm btn-danger" onclick="return confirm('Deseja realmente excluir esse registro de ID: @item.ClienteId')">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
}